<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="340dp"
    android:layout_height="470dp"
    android:layout_gravity="center"
    android:background="@color/popup_color"
    android:orientation="vertical"
    tools:context=".AddExamFragment">

    <Button
        android:id="@+id/btn_back4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="@string/back"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/exam_name_input"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="@string/exam_name"
        android:autofillHints="@string/exam_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/exam_date_input"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="@string/exam_date"
        android:autofillHints="@string/exam_date"
        android:inputType="date" />

    <EditText
        android:id="@+id/exam_time"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="@string/time"
        android:autofillHints="@string/time"
        android:inputType="text" />

    <EditText
        android:id="@+id/exam_location_input"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_gravity="center"
        android:hint="@string/location"
        android:autofillHints="@string/location"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_add4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:text="@string/add" />
</LinearLayout>