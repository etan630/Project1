<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    tools:context=".courseCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/class_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/class_name" />

        <TextView
            android:id="@+id/instructor_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/instructor_input" />

        <TextView
            android:id="@+id/day_of_week_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Days of Week" />

        <TextView
            android:id="@+id/time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/time_class_input" />

        <TextView
            android:id="@+id/section_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Section" />

        <TextView
            android:id="@+id/building_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Building" />

        <TextView
            android:id="@+id/room_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>